<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.empresa.fichador.controller.MenuTrabajadorController"
            fx:id="mainPane"
            style="-fx-background-color: #f0f0f0;">

    <!-- HEADER -->
    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Panel de Trabajador"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="lblNombreTrabajador" text="Nombre Trabajador"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>

                <Label text="Tarjeta:" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                <Label fx:id="lblTarjeta" text="0000"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Button text="Cerrar Sesión" onAction="#handleCerrarSesion"
                        styleClass="btn-danger" style="-fx-font-size: 12px;"/>
            </HBox>
        </VBox>
    </top>

    <!-- CONTENIDO -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f0f0f0;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">

                <!-- RELOJ -->
                <VBox alignment="CENTER" spacing="5"
                      style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 20;">
                    <Label fx:id="lblFechaHora"
                           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"
                           text="00:00:00"/>
                    <Label fx:id="lblFechaTexto"
                           style="-fx-font-size: 14px; -fx-text-fill: #666666;"
                           text="Lunes, 1 de enero de 2025"/>
                </VBox>

                <!-- INFORMACIÓN -->
                <HBox alignment="CENTER" spacing="15">
                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 150;">
                        <Label text="Estado Hoy" style="-fx-text-fill: #666666; -fx-font-size: 12px;"/>
                        <Label fx:id="lblEstadoHoy" text="Sin fichar"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 150;">
                        <Label text="Último Fichaje" style="-fx-text-fill: #666666; -fx-font-size: 12px;"/>
                        <Label fx:id="lblUltimoFichaje" text="--:--"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 150;">
                        <Label text="Horas Hoy" style="-fx-text-fill: #666666; -fx-font-size: 12px;"/>
                        <Label fx:id="lblHorasHoy" text="0h 00m"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 150;">
                        <Label text="Clima" style="-fx-text-fill: #666666; -fx-font-size: 12px;"/>
                        <HBox spacing="5" alignment="CENTER">
                            <Label fx:id="lblClimaIcono" text="☀️" style="-fx-font-size: 16px;"/>
                            <Label fx:id="lblClima" text="20°C"
                                   style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- BOTONES DE FICHAJE -->
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="btnEntrada" text="FICHAR ENTRADA" onAction="#handleEntrada"
                            styleClass="btn-success"
                            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 220; -fx-pref-height: 60;"/>

                    <Button fx:id="btnSalida" text="FICHAR SALIDA" onAction="#handleSalida"
                            styleClass="btn-danger"
                            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 220; -fx-pref-height: 60;"/>
                </HBox>

                <!-- MENSAJE -->
                <Label fx:id="lblMensaje" text=""
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;"
                       wrapText="true" maxWidth="600"/>

                <!-- HISTORIAL -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 700;">
                    <Label text="Fichajes de Hoy"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    <Separator/>
                    <VBox fx:id="vboxHistorial" spacing="8">
                        <Label text="No hay fichajes registrados hoy"
                               style="-fx-text-fill: #999999; -fx-font-size: 13px;"/>
                    </VBox>
                </VBox>

                <!-- RESUMEN SEMANAL -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-min-width: 700;">
                    <Label text="Resumen Semanal"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    <Separator/>
                    <HBox alignment="CENTER" spacing="40">
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="lblDiasTrabajados" text="0"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5E92C4;"/>
                            <Label text="Días trabajados" style="-fx-text-fill: #666666; -fx-font-size: 11px;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="lblHorasSemana" text="0h"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                            <Label text="Horas totales" style="-fx-text-fill: #666666; -fx-font-size: 11px;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="lblMediaDiaria" text="0h"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                            <Label text="Media diaria" style="-fx-text-fill: #666666; -fx-font-size: 11px;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

