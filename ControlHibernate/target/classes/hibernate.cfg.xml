<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/control_presencia?useSSL=false&amp;serverTimezone=Europe/Madrid&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">appuser</property>
        <property name="hibernate.connection.password">AppPass123!</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Entidades del sistema -->
        <mapping class="com.empresa.fichador.model.Usuario"/>
        <mapping class="com.empresa.fichador.model.Trabajador"/>
        <mapping class="com.empresa.fichador.model.Fichaje"/>
        <mapping class="com.empresa.fichador.model.Departamento"/>
        <mapping class="com.empresa.fichador.model.Horario"/>
        <mapping class="com.empresa.fichador.model.Incidencia"/>
    </session-factory>
</hibernate-configuration>
